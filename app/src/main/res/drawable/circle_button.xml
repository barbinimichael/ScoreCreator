<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#aacbff"></solid>
            <stroke
                android:width="1dp"
                android:color="#505050"/>
            <corners
                android:radius="7dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#4286f4"></solid>
            <stroke
                android:width="1dp"
                android:color="#505050"/>
            <corners
                android:radius="7dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>
        </shape>
    </item>
</selector>