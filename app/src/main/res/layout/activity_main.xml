<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/multicolor"
    tools:context="com.example.scorecreator.MainActivity">

    <ImageView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button"
        android:layout_alignTop="@+id/note1"
        android:contentDescription=""
        app:srcCompat="@mipmap/eigth_note"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="587dp" />

    <ImageView
        android:id="@+id/note1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/button"
        android:contentDescription=""
        app:srcCompat="@mipmap/eigth_note"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="638dp" />

    <ImageView
        android:id="@+id/note2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/note1"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="52dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/eigth_note"
        tools:layout_editor_absoluteY="587dp" />

    <ImageView
        android:id="@+id/note3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button"
        android:layout_alignTop="@+id/note"
        android:contentDescription=""
        app:srcCompat="@mipmap/eigth_note"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="577dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button"
            android:layout_width="450dp"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@mipmap/bluegradient_rectanglecurved"
            android:elevation="24dp"
            android:fontFamily="casual"
            android:onClick="record"
            android:text="@string/record_button"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="@string/record_button" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:text="@string/title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:text="@string/title" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/firstlayer_stafflines" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
